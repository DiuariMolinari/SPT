@model SPT.Models.PessoaEnderecos

<h2>Excluir vínculo</h2>

<h3>Tem certeza que deseja fazer isso?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Pessoa)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Pessoa.Nome)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Endereco)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Endereco.Cidade),
            @Html.DisplayFor(model => model.Endereco.Logradouro),
            @Html.DisplayFor(model => model.Endereco.Numero)
        </dd>
    </dl>
    
    <form asp-action="ExcluirPessoaEnderecos">
        <input type="hidden" asp-for="PessoaEnderecosId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-default">Voltar</a>
    </form>
</div>
