@model SPT.Models.Funcionario

@{
    ViewData["Title"] = "Cadastrar Funcionário";
}

<h2>Cadastrar Funcionário</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CriarFuncionario">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cpf" class="control-label"></label>
                <input asp-for="Cpf" class="form-control" />
                <span asp-validation-for="Cpf" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Status" /> Ativo
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label">Valor Hora</label>
                <input asp-for="ValorHora" class="form-control" />
                <span asp-validation-for="ValorHora" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-info" /> |
                <a asp-action="Index" class="btn btn-default">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
