@model SPT.Models.Consorcio

@{
    ViewData["Title"] = "ExcluirConsorcio";
}

<h2>ExcluirConsorcio</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Consorcio</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Segmento
        </dt>
        <dd>
            @Html.DisplayFor(model => model.NomeSegmento)
        </dd>
        <dt>
            Taxa de Seguro
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TaxaSeguro)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Ativo)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Ativo)
        </dd>
        <dt>
           Meses
        </dt>
        <dd>
            @Html.DisplayFor(model => model.QtdMesPlano)
        </dd>
        <dt>
            Descrição do Plano
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DescricaoPlano)
        </dd>
        <dt>
            Valor da Carta
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ValorCarta)
        </dd>
    </dl>
    
    <form asp-action="ExcluirConsorcio">
        <input type="hidden" asp-for="ConsorcioId" />
        <input type="submit" value="Excluir" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-default">Voltar</a>
    </form>
</div>
