@model IEnumerable<SPT.Models.Pessoa>

<h2>Pessoas</h2>

<p>
    <a asp-action="CriarPessoa" class="btn btn-info">Cadastrar Pessoa</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                Data de Nascimento
            </th>
            <th>
                Endereço
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataNascimento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Endereco.EnderecoId)
            </td>
            <td>
                <a asp-action="AtualizarPessoa" asp-route-id="@item.PessoaId" class="btn btn-primary">Editar</a> |
                <a asp-action="ExcluirPessoa" asp-route-id="@item.PessoaId" class="btn btn-danger">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>
